/* pages/structure/structure.wxss */

.container {
  padding: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.item {
  padding: 20rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.item-item {
  border-width: 1rpx;
  background: #f6f6f6;
  border-radius: 10%;
  padding: 10rpx;
  margin-right: 16rpx;
  margin-top: 10rpx;
}

.parent-text {
  font-size: 28rpx;
  color: #4c4c4e;
}

.child-text {
  font-size: 24rpx;
  color: #8a8a8a;
}
