/* pages/me/me.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
}

.head {
  width: 148rpx;
  height: 148rpx;
}

.username {
  color: #4c4c4e;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.item {
  display: flex;
  flex-direction: column;
  width: 100%;
  color: #4c4c4e;
  font-size: 28rpx;
  padding: 30rpx;
}

.line {
  width: 100%;
  height: 20rpx;
  background-color: #f6f6f6;
}

.hover {
  background-color: #f6f6f6;
}

.logout {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  font-size: 28rpx;
  color: #f53737;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
