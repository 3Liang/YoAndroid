/* pages/home/home.wxss */
.bannerContainer{
  display: flex;
  flex-direction: row;
  width:100%;
}

.hBanner{
  width: 100px;
  flex-grow: 2;
}

.vBanner{
  width:80px;
  flex-grow: 1;
}

.bannerImage{
  width:100%;
  height:100%;
}

.item{
  padding: 20rpx;
}

.item-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.item-image{
  width:40rpx;
  height:40rpx;
}

.item-text{
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.author-text{
  color:#8a8a8a;
  font-size: 24rpx;
}

.chapter-text{
  color:#cdcdcd;
  font-size: 24rpx;
}

.title-text{
  color: #4c4c4e;
  font-size: 28rpx;
}

.time-text{
  color:#8a8a8a;
  font-size: 24rpx;
}

.line{
  background: #f6f6f6;
  width: 100%;
  height: 10rpx;
}

.item-hover{
  background: #f6f6f6;
}